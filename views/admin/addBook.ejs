<div class="row pt-5 px-5">
    <div class="col-12">
        <nav aria-label="breadcrumb bg-dark">
            <ol class="breadcrumb text-center">
              <li class="breadcrumb-item"><a href="/admin">Admin Panel</a></li>
              <li class="breadcrumb-item"><a href="/admin/books">Books</a></li>
              <li class="breadcrumb-item active" aria-current="page">New Book</li>
            </ol>
    </div>
</div>



<div class="col-12">
    <h1 class="display-5 fw-bold py-5 text-center">Add New Book</h1>
</div>


<div class="row justify-content-center">
    <div class="col-6">
        <form action="/admin/add-book" method="POST" enctype="multipart/form-data">
            <div class="row g-3">
                
                <div class="col-12">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" name="title" id="title">
                </div>

                <div class="col-12">
                    <label for="categoryId">Category</label>
                    <select name="categoryId" id="categoryId" class="form-control">
                        <option selected>Select Category</option>
                        <% if(categories){ %>
                            <% categories.forEach(category=>{ %> 
                                <option value="<%= category._id%>"><%= category.name%></option>
                            <% }) %> 
                        <% } %>  
                    </select>
                </div>

                <div class="col-12">
                    <label for="author">Author</label>
                    <input type="text" class="form-control" name="author" id="author">
                </div>

                <div class="col-12">
                    <div class="row">
                        <div class="col-6">
                            <label for="rank">Rank</label>
                            <select name="rank" id="rank" class="form-control">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                            </select>
                        </div>
                        <div class="col-6">
                            <label for="pages">Number of Pages</label>
                            <input type="number" class="form-control" name="pages" id="pages">
                        </div>
                    </div>
                    
                </div>

                <div class="col-12">
                    <label for="summary">Summary</label>
                    <textarea name="summary" id="summary" cols="30" rows="10" class="form-control"></textarea>
                </div>

                <div class="col-12">
                    <input type="file" class="form-control" name="image">
                </div>

                <div class="text-center my-3">
                    <button class="btn btn-primary">Add</button>
                </div>

            </div>
        </form>
    </div>
</div>